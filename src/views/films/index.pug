extends ../layout

block header
  include ../header

block content
  .card.shadow-sm
    .card-header.bg-white.d-flex.justify-content-between.align-items-center
      h5.mb-0 Films
    .card-body.p-0
      table.table.table-hover.table-striped.mb-0
        thead.table-light
          tr
            th(scope="col") ID
            th(scope="col") Title
            th(scope="col") Description
            th(scope="col") Release Year
            th(scope="col") Category
        tbody
          each film in films
            tr
              td= film.film_id
              td= film.title
              td= film.description
              td= film.release_year
              td= film.category
